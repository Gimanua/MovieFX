<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="292.0" prefWidth="598.0" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nu.te4.moviefx.MainController">
   <children>
      <Label text="Sök">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Label>
      <HBox>
         <children>
            <ComboBox fx:id="searchTypeBox" prefWidth="150.0" />
            <TextField fx:id="searchQueryField" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <Label text="Filtrering">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <GridPane>
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Aktiva Filter" />
            <Button fx:id="addFilterButton" mnemonicParsing="false" text="Lägg till Filter" GridPane.columnIndex="3" />
         </children>
      </GridPane>
      <ListView fx:id="filterList" prefHeight="200.0" prefWidth="200.0" />
      <Label text="Filmer">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="addMovieButton" mnemonicParsing="false" onMouseClicked="#addMovieHandler" text="Lägg till Film" />
         </children>
      </HBox>
      <TableView fx:id="movieTable" prefHeight="200.0" prefWidth="200.0">
        <columns>
          <TableColumn fx:id="titleColumn" editable="false" prefWidth="50.0" text="Titel" />
          <TableColumn fx:id="budgetColumn" editable="false" prefWidth="50.0" text="Budget" />
            <TableColumn fx:id="revenueColumn" editable="false" prefWidth="55.0" text="Inkomst" />
            <TableColumn fx:id="lengthColumn" editable="false" prefWidth="50.0" text="Längd" />
            <TableColumn fx:id="gradeColumn" editable="false" prefWidth="50.0" text="Betyg" />
            <TableColumn fx:id="releaseDateColumn" editable="false" prefWidth="125.0" text="Lanseringsdatum" />
            <TableColumn fx:id="directorColumn" editable="false" prefWidth="100.0" text="Regissör" />
            <TableColumn fx:id="genresColumn" prefWidth="77.0" text="Genrer" />
        </columns>
      </TableView>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
